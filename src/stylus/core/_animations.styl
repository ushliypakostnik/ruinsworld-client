// Keyframes
//////////////////////////////////////////////////////

@keyframes fade
  0%
    opacity 0

  100%
    opacity 1


@keyframes effect
  0%
    opacity 0

  15%
    opacity 0.75

  30%
    opacity 0

  45%
    opacity 0.5

  60%
    opacity 0

  80%
    opacity 0.25

  100%
    opacity 0

.effect
  animation effect ($effects.duration * 15) infinite


// Vue classes for animation
//////////////////////////////////////////////////////

.fade
  &-enter-active
    animation fade $effects.duration forwards

  &-leave-active
    animation fade $effects.duration reverse

.fade2
  &-enter-active
    animation fade ($effects.duration * 2) forwards

  &-leave-active
    animation fade ($effects.duration * 2) reverse

.hit
  animation effect 0.25s infinite

.point
  animation effect 1s infinite
